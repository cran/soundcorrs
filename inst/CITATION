	number		= "",
	pages		= "",
	year		= "[forthcoming]",
	url			= "",

	textVersion	= paste("Stachowski, Kamil [forthcoming].",
						"soundcorrs: Tools for Semi-Automatic Analysis of Sound Correspondences")
